{
  "name": "html-get",
  "description": "Get the HTML from any website, using prerendering when is necessary.",
  "homepage": "https://nicedoc.com/microlinkhq/html-get",
  "version": "2.5.0",
  "main": "src/index.js",
  "bin": {
    "html-get": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microlinkhq/html-get.git"
  },
  "bugs": {
    "url": "https://github.com/microlinkhq/html-get/issues"
  },
  "keywords": [
    "fetch",
    "get",
    "got",
    "headless",
    "html",
    "prerender",
    "request"
  ],
  "dependencies": {
    "@metascraper/helpers": "~5.11.14",
    "cheerio": "~1.0.0-rc.3",
    "css-url-regex": "~3.3.1",
    "debug-logfmt": "~1.0.4",
    "execall": "~2.0.0",
    "got": "~11.2.0",
    "html-encode": "~2.1.1",
    "html-urls": "~2.4.11",
    "is-cdn-url": "~1.0.0",
    "is-relative-url": "~3.0.0",
    "lodash": "~4.17.15",
    "mime-types": "~2.1.27",
    "p-cancelable": "~2.0.0",
    "p-retry": "~4.2.0",
    "replace-string": "~3.1.0",
    "require-one-of": "~1.0.13",
    "time-span": "~4.0.0",
    "tldts": "~5.6.26",
    "top-sites": "~1.1.24",
    "write-json-file": "~4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "latest",
    "browserless": "latest",
    "ci-publish": "latest",
    "conventional-github-releaser": "latest",
    "coveralls": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "husky": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "pretty": "latest",
    "puppeteer": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest"
  },
  "engines": {
    "node": ">= 10"
  },
  "files": [
    "bin",
    "scripts",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "contributors": "(git-authors-cli && finepack && git add package.json && git commit -m 'build: contributors' --no-verify) || true",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard-markdown README.md && standard",
    "postinstall": "node scripts/postinstall",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "prerelease": "npm run update:check && npm run contributors",
    "pretest": "npm run lint",
    "release": "standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "nyc ava --verbose --serial test/html.js test/index.js",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "!test/util.js",
      "test/**/*.js"
    ],
    "timeout": "2m"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "finepack"
    ],
    "*.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ]
  }
}
